rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // NARA Users Collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && 
        resource.data.privacy.profile_visibility == 'public';
    }
    
    // NARA News & Articles Collection
    match /news/{newsId} {
      allow read: if true; // Public read access for news
      allow create, update, delete: if request.auth != null && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'editor']);
    }
    
    // NARA Research Projects Collection
    match /research_projects/{projectId} {
      allow read: if resource.data.visibility == 'public' || 
        (request.auth != null && request.auth.uid in resource.data.team_members);
      allow write: if request.auth != null && 
        (request.auth.uid == resource.data.principal_investigator ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
    
    // NARA Publications Collection
    match /publications/{publicationId} {
      allow read: if resource.data.access_level == 'public' ||
        (request.auth != null && resource.data.access_level == 'registered');
      allow write: if request.auth != null && 
        (request.auth.uid in resource.data.authors ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'researcher']);
    }
    
    // NARA Procurement Notices Collection
    match /procurement_notices/{noticeId} {
      allow read: if true; // Public read access
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'procurement_officer'];
    }
    
    // NARA Job Postings Collection
    match /job_postings/{jobId} {
      allow read: if true; // Public read access
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'hr_manager'];
    }
    
    // NARA Applications Collection (Procurement & Job)
    match /applications/{applicationId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.applicant_id ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'hr_manager', 'procurement_officer']);
    }
    
    // NARA Events Collection
    match /events/{eventId} {
      allow read: if true; // Public read access for events
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'event_manager'];
    }
    
    // NARA Comments/Feedback Collection
    match /comments/{commentId} {
      allow read: if true; // Public read for approved comments
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && 
        (request.auth.uid == resource.data.author_id ||
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'moderator']);
    }
    
    // NARA Analytics Collection (Admin only)
    match /analytics/{document} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // NARA Configuration Collection (Admin only)
    match /configuration/{configId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Default deny rule
    match /{document=**} {
      allow read, write: if false;
    }
  }
}